pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }

    stages {
        stage('Build') {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Build result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
    post {
        always {
            echo 'Build pipeline for worker is complete'
        }
    }
}
